      <button class="w-full border border-white hover:bg-teal-600 transition-colors text-white font-medium py-2 px-4 rounded-3xl">Agendar Consulta</button>
        </a>
      </div>
    </div>
  </div>
</header>

<script>



  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    function closeMenu() {
      if (mobileMenu) {
        mobileMenu.style.maxHeight = "0px";
      }
      if (menuToggle) {
        menuToggle.setAttribute("aria-expanded", "false");
      }

      if (menuToggle) {
        const spans = menuToggle.querySelectorAll("span");
        spans[0].classList.remove("rotate-45", "translate-y-2");
        spans[1].classList.remove("opacity-0");
        spans[2].classList.remove("-rotate-45", "-translate-y-2");
      }

      document.removeEventListener("click", handleOutsideClick);
    }

    function handleOutsideClick(event: MouseEvent) {
      if (
        (!mobileMenu || !mobileMenu.contains(event.target as Node)) &&
        (!menuToggle || !menuToggle.contains(event.target as Node))
      ) {
        closeMenu();
      }
    }
    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener("click", (event) => {
        event.stopPropagation();

        const isExpanded = menuToggle.getAttribute("aria-expanded") === "true";

        if (isExpanded) {
          closeMenu();
        } else {
          menuToggle.setAttribute("aria-expanded", "true");
          mobileMenu.style.maxHeight = mobileMenu.scrollHeight + "px";
          let spans;
          if (menuToggle) {
            spans = menuToggle.querySelectorAll("span");
            spans[0].classList.add("rotate-45", "translate-y-2");
            spans[1].classList.add("opacity-0");
            spans[2].classList.add("-rotate-45", "-translate-y-2");
          }

          setTimeout(() => {
            document.addEventListener("click", handleOutsideClick);
          }, 10);
        }
      });

      window.addEventListener("resize", () => {
        if (window.innerWidth >= 768) {
          closeMenu();
        }
      });

      const mobileLinks = mobileMenu.querySelectorAll("a");
      mobileLinks.forEach((link) => {
        link.addEventListener("click", closeMenu);
      });

      document.addEventListener("keydown", (e) => {
        if (
          e.key === "Escape" &&
          menuToggle.getAttribute("aria-expanded") === "true"
        ) {
          closeMenu();
        }
      });
    }
  });
</script>
