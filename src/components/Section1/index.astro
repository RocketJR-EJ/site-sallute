<style>
  .fader__slide {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    pointer-events: none;
  }

  .fader__slide.active {
    opacity: 1;
    pointer-events: auto;
  }
</style>

<script>
  import KeenSlider from "keen-slider";

  document.addEventListener("DOMContentLoaded", () => {
    const slides = document.querySelectorAll(".fader__slide");

    if (slides.length > 0) {
      slides[0].classList.add("active");
    }

    const slider = new KeenSlider("#my-keen-slider", {
      loop: true,
      slides: slides.length,
    });

    slider.on("slideChanged", (instance) => {
      const currentSlide = instance.track.details.rel;

      slides.forEach((slide, idx) => {
        if (idx === currentSlide) {
          slide.classList.add("active");
        } else {
          slide.classList.remove("active");
        }
      });
    });

    let interval: ReturnType<typeof setInterval> | undefined;

    const startAutoPlay = () => {
      interval = setInterval(() => {
        slider.next();
      }, 15000);
    };

    startAutoPlay();

    slider.on("dragStarted", () => clearInterval(interval));
    slider.on("dragEnded", () => startAutoPlay());

    window.addEventListener("resize", () => {
      setTimeout(() => {
        slider.update();
      }, 300);
    });
  });
</script>

